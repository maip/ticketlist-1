<% Time.zone = 'MST' %>
<%= form_for @event, :html => { :multipart => true } do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :event_type %><br>
    <%= f.text_field :event_type %>
  </div>
  <div class="field">
    <%= f.label :datetime %><br>
    <% Time.use_zone('MST') do %>
      <%= f.datetime_select :datetime, start_year: 2014, end_year: 2034, ampm: true, order: [:month, :day, :year] %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :venue %><br>
    <%= f.text_field :venue %>
  </div>

  <div class="field">
    <%= f.label :available_tickets %><br>
    <%= f.number_field :available_tickets, min: 0 %>
  </div>
    
  <div class="field">
    <%= f.label :total_tickets %><br>
    <%= f.number_field :total_tickets, min: 0 %>
  </div>

  <div class="field">
    <%= f.label :photo %><br>
    <%= f.file_field :photo %>
  </div>

  <div class="actions"> 
    <%= f.submit %>
  <div>

<% end %>
