<!--
form for new tickets
-->

<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :event_type %><br>
    <%= f.text_field :event_type %>
  </div>
  <div class="field">
    <%= f.label :datetime %><br>
    <%= f.datetime_select :datetime, :ampm => true, :order => [:month, :day, :year] %>
  </div>
  <div class="field">
    <%= f.label :venue %><br>
    <%= f.text_field :venue %>
  </div>

  <div class="field">
    <%= f.label :available_tickets %><br>
    <%= f.number_field :available_tickets, value: 1 %>
  </div>
    
  <div class="field">
    <%= f.label :total_tickets %><br>
    <%= f.number_field :total_tickets, value: 1 %>
  </div>

  <div class="field">
    <%= f.file_field :photo %>
  </div>
  <div class="actions"> 
    <%= f.submit %>
  <div>

<% end %>
